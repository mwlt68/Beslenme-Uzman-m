                        <strong>@Model.Title</strong>
                    </h3>

                    <div class="row pt-1">

                        <div class="container">
                            <i>@Model.UpdateDate.ToString("MM/dd/yyyy")</i> 
                        </div>
                        <div class="container pt-3">
                            <a class="beautyLink" href="asdasd">
                                @Model.Nutritionist.User.ToString()
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>

