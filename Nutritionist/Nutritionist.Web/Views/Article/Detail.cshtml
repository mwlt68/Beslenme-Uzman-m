            <div class="col-md-12 col-lg-10">

                <h4 class="mbr-section-subtitle mbr-fonts-style mb-4 display-5"></h4>
                <p class="mbr-text mbr-fonts-style display-7">
                    @Model.Body
                </p>
            </div>
        </div>
    </div>
</section>
