@model Nutritionist.Core.Models.Article.Update
@{
    ViewData["Title"] = "Makale Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
    byte[] articleImage = Nutritionist.Web.Infrastructure.StaticFunctions.GetBytesFromFile(Model.Image);

}

<section class="form5 cid-smbjZuFWDN" id="form5-q">


    <div class="container">
        <div class="mbr-section-head">
            <h3 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                <strong>Makaleni Güncelle</strong>
            </h3>

        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-lg-8 mx-auto mbr-form">
                <form asp-controller="Article" asp-action="Edit" method="POST" class="mbr-form form-with-styler" enctype="multipart/form-data">
                    <div class="dragArea row">
                        <div class="form-group">
                            <center>
                                @if (articleImage == null || articleImage.Length <= 0)
                                {
                                    <img src="https://www.generationsforpeace.org/wp-content/uploads/2018/03/empty.jpg" id="Image_Preview" style="width:400px;height:300px">
                                }
                                else
                                {
                                    <img src="data:image/jpg;base64, @Convert.ToBase64String(articleImage)" id="Image_Preview">
                                }
                            </center>
                            <div class="col-lg-12 col-md-12 col-sm-12 align-center mbr-section-btn py-4">
                                <span class="btn btn-warning" id="Image_Btn">
                                    <span>
                                        Makale Resmi
                                    </span>
                                </span>
                                <input type="file" id="Image" asp-for="Image" style="visibility:hidden;">
                            </div>

                        </div>

                        <div class="col-12 form-group mt-3">
                            <label class="control-label">Makale Başlığı</label>
                            <input type="text" placeholder="Makale Başlığı" class="form-control" asp-for="Title">
                            <small class="form-text text-muted">En fazla 150 karakterden oluşmaldır.</small>
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="col-12 form-group mt-3">
                            <label class="control-label">Makale</label>
                            <textarea placeholder="Makale" class="form-control" rows="50" asp-for="Body"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>

                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 align-center mbr-section-btn">
                            <button type="submit" class="btn btn-primary display-4">Güncelle</button>
                        </div>
                    </div>
                </form>
                <hr>
                <center>
                    <a asp-controller="Article" asp-action="Delete" asp-route-id="@Model.Id.ToString()" class="btn btn-danger" onclick="return confirm('Makalenizi kaldırmak istediginden emin misin ?',);">Makaleyi Kaldır</a>
                </center>
            </div>
        </div>
    </div>

</section>

